<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsActivity"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:layout_weight="0.6"/>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="0.5"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorMedium"
                    android:text="Participant Name"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    ></TextView>

                <androidx.cardview.widget.CardView

                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="@color/colorCardViewBackground"
                    app:cardCornerRadius="25dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/parti_name_ap"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"

                            android:hint="xyz"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/colorTitle"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="0.5"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorMedium"
                    android:text="Event Code"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    ></TextView>

                <androidx.cardview.widget.CardView

                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="@color/colorCardViewBackground"
                    app:cardCornerRadius="25dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/event_code_ap"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"

                            android:hint="TC-01"

                            android:textColor="@color/colorTitle"
                            android:textSize="20dp"
                            android:gravity="center_horizontal"
                            android:inputType="textCapCharacters"
                            />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="0.5"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/colorMedium"
                    android:text="College"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    ></TextView>

                <androidx.cardview.widget.CardView

                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="@color/colorCardViewBackground"
                    app:cardCornerRadius="25dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/college_ap"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:inputType="textCapCharacters"

                            android:hint="VIT Pune"
                            android:textColor="@color/colorTitle"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="0.5"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/colorLight"
                    android:text="Year"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    ></TextView>

                <androidx.cardview.widget.CardView

                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="@color/colorCardViewBackground"
                    app:cardCornerRadius="25dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/year_ap"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"

                            android:hint="FY , SY , B.Tech ,etc"
                            android:inputType="textCapCharacters"


                            android:textColor="@color/colorTitle"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="0.5"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/colorLight"
                    android:text="Email"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    ></TextView>

                <androidx.cardview.widget.CardView

                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="@color/colorCardViewBackground"
                    app:cardCornerRadius="25dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/email_ap"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"

                            android:hint="eventix@gmail.com"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/colorTitle"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="0.5"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@color/colorLight"
                    android:text="Contact"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    ></TextView>

                <androidx.cardview.widget.CardView

                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="@color/colorCardViewBackground"
                    app:cardCornerRadius="25dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/contact_ap"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"

                            android:hint="0123456789"
                            android:inputType="number"
                            android:textColor="@color/colorTitle"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_below="@+id/register_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/colorGrey"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">
            <RelativeLayout
                android:id="@+id/add_p"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:text="ADD"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</RelativeLayout>